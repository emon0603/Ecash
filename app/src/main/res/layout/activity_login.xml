<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <!-- Top Lay start -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            app:tint="?attr/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="বাংলা"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_lang_bt"
            android:textColor="?attr/colorPrimary"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingRight="@dimen/_10ssp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <!-- Top Lay end -->

    <!-- Top Lay start -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20ssp"

        >

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_centerVertical="true"
            app:tint="?attr/colorPrimary"
            />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/baseline_qr_code_scanner_24"
            app:tint="?attr/colorPrimary"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            />

    </RelativeLayout>
    <!-- Top Lay end -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to your bKash account"
        android:textSize="@dimen/_17sdp"
        android:layout_marginLeft="@dimen/_10ssp"

        />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Number"
            android:textColor="#8a8a8a"
            android:textStyle="bold"

            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+88"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01755756373"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:background="@null"
                    android:focusable="false"
                    android:clickable="false"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />


            </LinearLayout>




    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bKash PIN"
            android:textColor="#8a8a8a"
            android:textStyle="bold"
            />

            <EditText
                android:id="@+id/pinEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="Enter bKash PIN"
                android:gravity="center|left"
                android:maxLength="5"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@null"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="false"
                android:textCursorDrawable="@drawable/custom_cursor"
                />






        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#F4F4F4"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget PIN? Try PIN Reset"
                android:textColor="?attr/colorPrimary"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new Account"
                android:textColor="@color/black"

                />





        </LinearLayout>


    </LinearLayout>





    <!-- Custom Number Keyboard -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_nextbt"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10ssp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>

        <GridLayout
            android:id="@+id/customKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:paddingBottom="@dimen/_10sdp"


            >

            <!-- Number Buttons -->
            <Button android:id="@+id/btn1" android:text="1" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn2" android:text="2" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn3" android:text="3" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn4" android:text="4" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn5" android:text="5" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn6" android:text="6" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn7" android:text="7" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn8" android:text="8" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn9" android:text="9" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btnBackspace" android:text="⌫" style="@style/CustomKeypadButton"/>
            <Button android:id="@+id/btn0" android:text="0" style="@style/CustomKeypadButton"/>
            <ImageView android:id="@+id/btn_enter" android:src="@drawable/ic_enter" style="@style/CustomKeypadButton" android:padding="@dimen/_3sdp"/>




        </GridLayout>

    </LinearLayout>






</RelativeLayout>