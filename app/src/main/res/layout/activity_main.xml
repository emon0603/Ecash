<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:openDrawer="startt"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/TopBarLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:background="@drawable/bg_appbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/mypic"
                    android:layout_marginLeft="@dimen/_15sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/usernametv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rakibul Emon"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_3sdp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_20sdp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:id="@+id/balance_bt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:id="@+id/bt_ic_tk"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:text="à§³"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:background="@drawable/bg_balance_oval"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                />


                            <TextView
                                android:id="@+id/text_tap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap for Balance"
                                android:padding="@dimen/_5sdp"
                                android:textColor="?attr/colorPrimary"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/_30sdp"



                                />

                            <TextView
                                android:id="@+id/tv_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20.00"
                                android:padding="@dimen/_5sdp"
                                android:textColor="?attr/colorPrimary"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:visibility="gone"
                                android:layout_centerInParent="true"


                                />




                        </RelativeLayout>



                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>


            <ImageButton
                android:id="@+id/MenuBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/white" />





        </LinearLayout>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:weightSum="4"

                >

                <LinearLayout
                    android:id="@+id/homebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/home"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textStyle="bold"


                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/messagebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_message"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/setting"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aboutbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/info"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />


                </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Todo. Navigation Drawer-->
    <com.google.android.material.navigation.NavigationView
        style="@style/FlatCornersNavigationView"
        android:id="@+id/navmenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_menu"
        android:background="@color/white"
        />


</androidx.drawerlayout.widget.DrawerLayout>